# Database Configuration
MONGODB_URI=mongodb://ecommerce_user:ecommerce_password@localhost:27017/ecommerce_db
MONGODB_TEST_URI=mongodb://ecommerce_user:ecommerce_password@localhost:27017/ecommerce_test_db

# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# S3-Compatible Storage Configuration
# For local development with MinIO
S3_ENDPOINT=localhost
S3_PORT=9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET_NAME=ecommerce-uploads
S3_USE_SSL=false
S3_REGION=us-east-1

# Legacy MinIO Configuration (for backward compatibility)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=ecommerce-uploads
MINIO_USE_SSL=false

# For production with AWS S3, use these instead:
# S3_ENDPOINT=s3.amazonaws.com
# S3_PORT=443
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_BUCKET_NAME=your-production-bucket
# S3_USE_SSL=true
# S3_REGION=us-east-1

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log
